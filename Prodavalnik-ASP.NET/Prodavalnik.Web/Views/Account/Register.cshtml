@model Prodavalnik.Models.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Регистрация</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Имейл" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Парола" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Потвърди парола" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            <input type="submit" class="btn btn-info btn-block" value="Регистрация" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
