@using System.Globalization
@model Prodavalnik.Models.ViewModels.User.MessageDetailsViewModel
@{
    ViewBag.Title = "MessageDetails";
}

<h2>Съобщения</h2>

<div class="container">
    <ul class="nav nav-tabs">
        <li><a href="/profile">Обяви</a></li>
        <li class="active"><a href="/profile/messages">Съобщения</a></li>
        <li><a  href="/profile/settings">Настройки</a></li>
    </ul>
    <div class="tab-content">
        <ul class="nav nav-pills">
            <li><a href="/profile/messages">Назад</a></li>
        </ul>
        <div class="tab-pane fade in active">
            <span>
                <a href="/profile/@Model.Sender.Id">
                    @Model.Sender.Email.Substring(0, Model.Sender.Email.IndexOf("@"))
                </a>
            </span>
            <span class="data-message-detail">@Model.DateOfSent.ToString("f", new CultureInfo("bg-BG"))</span>
            <div class="panel panel-default">

                <div class="panel-heading">

                    <div class="media ">
                        <div class="media-left">
                            <img src="../../UploadsImages/@Model.Ad.Images.First().ImageName" alt="@Model.Ad.Images.First().ImageName" class="media-object" style="width: 60px">
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@Model.Ad.Title</h4>
                            <p>Номер на обявата: @Model.Ad.Id</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <h5>Съобщение:</h5>
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Model.Content
                </div>
            </div>

            <div class="panel panel-default panel-size-msg-deitals">
                
                <div class="panel-heading">
                    <h4>Изпрати съобщение</h4>
                    @using (@Html.BeginForm())
                    {
                        @Html.Hidden("RecipientId", Model.Sender.Id)
                        @Html.Hidden("AdName", Model.Ad.Title)
                        <div class="form-group">
                            @Html.TextArea("MessageContent", null, new {@class = "form-control textarea-message-details"})
                        </div>
                        <div class="form-group">
                            <input class="btn btn-info" type="submit" value="Изпрати"/>
                        </div>
                    }
                </div>
            </div>

        </div>
        </div>

</div>




