
@model IEnumerable<SelectListItem>

<div class="jumbotron">
    @using (@Html.BeginForm("Index", "Ads", FormMethod.Get, new {@class = "form-inline"}))
    {
        <div class="row">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBox("Search", null, new { @class = "form-control col-md-10", @placeholder = "Търсене..." })
                </div>
            </div>

            <div class="form-group cat">

                <div class="col-md-10">
                    @Html.DropDownList("Category", new SelectList(Model, "Value", "Text", Model.FirstOrDefault(x => x.Selected)?.Value), htmlAttributes: new { @class = "form-control fields-select" })

                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group ch">
                <div class="col-md-12">
                    @Html.CheckBox("FWDescription", true, new {@class = "checkbox-success"})
                    @Html.Label("Търси и в описанието на обявите")
                </div>
            </div>
            <div class="form-group ch">
                <div class="col-md-12">
                    @Html.CheckBox("FWPicture", false, new { @class = "checkbox-success" })
                    @Html.Label("Само със снимка")
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBox("PriceFrom", null, new { @class = "form-control", @placeholder = "Цена от" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBox("PriceTo", null, new { @class = "form-control", @placeholder = "Цена до" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-12">
                   <input type="submit" class="btn btn-default" id="search" value="Търси"/>
                </div>
            </div>
        </div>
    }
</div>
