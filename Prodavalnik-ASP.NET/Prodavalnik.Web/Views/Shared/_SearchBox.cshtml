
@model IEnumerable<SelectListItem>

<div class="jumbotron">
    @using (@Html.BeginForm("Index", "Ads", FormMethod.Get, new {@class = "form-inline"}))
    {
        <div class="row">
            <div class="form-group">
                    @Html.TextBox("Search", null, new { @class = "form-control input-search-box", @placeholder = "Търсене..." })
            </div>

            <div class="form-group">
                    @Html.DropDownList("Category", 
                   new SelectList(Model, "Value", "Text", Model.FirstOrDefault(x => x.Selected)?.Value), htmlAttributes: new { @class = "form-control fields-select input-search-box" })
            </div>
        </div>

        <div class="row">
            <div class="form-group checkbox-margin">
                    @Html.CheckBox("FWDescription", true, new {@class = ""})
                    @Html.Label("Търси и в описанието на обявите")
            </div>
            <div class="form-group checkbox-margin">
                    @Html.CheckBox("FWPicture", false, new { @class = "" })
                    @Html.Label("Само със снимка")
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                    @Html.TextBox("PriceFrom", null, new { @class = "form-control input-search-box", @placeholder = "Цена от" })
            </div>
            <div class="form-group">
                    @Html.TextBox("PriceTo", null, new { @class = "form-control input-search-box", @placeholder = "Цена до" })
            </div>
            
            <div class="form-group btn-margin">
                   <input type="submit" class="btn btn-default btn-search-box" id="search" value="Търси"/>
            </div>
        </div>
    }
</div>
